---
import { getResponsiveLCP } from '../lib/assets';
import DownloadButton from './DownloadButton.astro';

// Generate responsive LCP image URLs
const responsiveLCP = getResponsiveLCP('/images/fotocvdev-lcp.webp');
const lcpSrcset = `${responsiveLCP.mobile} 256w, ${responsiveLCP.desktop} 512w`;
const lcpSizes = "(max-width: 768px) 256px, 512px";
---

<section class="min-h-screen flex items-center justify-center px-4 pt-32 md:pt-40">
  <div class="max-w-4xl mx-auto text-center">
    <div class="mb-8 relative inline-block">
      <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full blur-2xl opacity-30 animate-pulse"></div>
      <img 
        src={responsiveLCP.desktop}
        srcset={lcpSrcset}
        sizes={lcpSizes}
        alt="Jorge Leal - Software Engineer"
        class="relative w-48 h-48 md:w-64 md:h-64 rounded-full object-cover border-4 border-white dark:border-gray-800 shadow-2xl"
        fetchpriority="high"
        loading="eager"
        decoding="async"
        width="256"
        height="256"
      />
    </div>
    
    <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-blue-600 via-purple-600 to-blue-600 bg-clip-text text-transparent animate-gradient">
      Jorge Leal
    </h1>
    
    <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8">
      <span data-i18n="hero.subtitle">Ingeniería en Desarrollo de Software / Entusiasta de Análisis de Datos</span>
    </p>
    
    <!-- Botones de descarga de CV y Resume -->
    <div class="mb-8 flex flex-col md:flex-row gap-4 justify-center">
      <DownloadButton 
        id="downloadCV"
        defaultText="Descargar CV"
        filePathEs="/cv/CV_JorgeLeal_ES.pdf"
        filePathEn="/cv/CV_JorgeLeal_EN.pdf"
        i18nKey="hero.downloadCV"
        analyticsAction="cv_download"
        icon="document"
      />
      <DownloadButton 
        id="downloadResume"
        defaultText="Descargar Resume"
        filePathEs="/cv/Resume_JorgeLeal_ES.pdf"
        filePathEn="/cv/Resume_JorgeLeal_EN.pdf"
        i18nKey="hero.downloadResume"
        analyticsAction="resume_download"
        icon="resume"
      />
    </div>
    
    <div class="flex gap-4 justify-center">
      <a 
        href="https://github.com/BSTCMX" 
        target="_blank"
        rel="noopener noreferrer"
        class="p-3 bg-white social-link dark:bg-gray-800 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-110"
        aria-label="GitHub"
      >
        <svg class="w-7 h-7 text-gray-900 dark:text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
        </svg>
      </a>
      
      <a 
        href="https://www.linkedin.com/in/jorgelealcornejo" 
        target="_blank"
        rel="noopener noreferrer"
        class="p-3 bg-white social-link dark:bg-gray-800 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-110"
        aria-label="LinkedIn"
      >
        <svg class="w-7 h-7 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </a>
    </div>
  </div>
</section>
