    <AnalyticsTracker />
    <ScrollReveal />
    
    <script>
      import { languages, defaultLang } from '../i18n/index.js';
      
      window.i18n = { languages, defaultLang };
      window.currentLang = localStorage.getItem('language') || defaultLang;
      
      window.updateTexts = function() {
        document.querySelectorAll('[data-i18n]').forEach(el => {
          const key = el.getAttribute('data-i18n');
          const keys = key.split('.');
          let value = window.i18n.languages[window.currentLang];
          
          for (const k of keys) {
            value = value?.[k];
          }
          
          if (value) el.textContent = value;
        });
        
        document.querySelectorAll('[data-project-desc-current]').forEach(el => {
          const parent = el.parentElement;
          const esDesc = parent.querySelector('[data-project-desc-es]');
          const enDesc = parent.querySelector('[data-project-desc-en]');
          
          if (window.currentLang === 'es' && esDesc) {
            el.textContent = esDesc.textContent;
          } else if (window.currentLang === 'en' && enDesc) {
            el.textContent = enDesc.textContent;
          }
        });
      };
      
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', window.updateTexts);
      } else {
        window.updateTexts();
      }
    </script>
  </body>
</html>
